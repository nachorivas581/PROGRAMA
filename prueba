sleep 3 ;echo -e "\e[7mQue deseas hacer?\e[0m"
           select yn in "AGREGAR PACIENTES" "VER LISTA PACIENTES" SIGUIENTE ; do
             case $yn in
                   "AGREGAR PACIENTES") nano ListaPacientes ;  bash prueba ;break ;;
                   "VER LISTA PACIENTES") bash ListaPacientes ; exit;;
                    SIGUIENTE) clear ;sleep 3 ;echo -e "\e[7mQue deseas hacer?\e[0m"
                       select yn in "DAR TURNOS" "MODIFICAR TURNOS" "VER TURNOS" ; do
                        case $yn in
                   "DAR TURNOS") nano TURNOS ; bash prueba ;;
                   "MODIFICAR TURNOS") nano TURNOS ; bash prueba;;
                    "VER TURNOS") bash TURNOS ; exit ;;
                   esac
                   done
                   esac
                   done



